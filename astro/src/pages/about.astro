        transform: translate(-50%, -50%);
      }
    }
  }

  .marquee-container {
    height: 600px;
    position: relative;
    overflow: hidden;
  }
  .marquee-instance {
    position: absolute;
    width: 100%;
  }
  .marquee-instance.green {
    top: 30%;
  }
  .marquee-instance.orange {
    bottom: 5rem;
  }
  .marquee-instance-wrapper {
    margin: 5rem 0;
    overflow-x: hidden;
    transform: rotate(11.5deg) scale(1.05);
  }
  .marquee-instance-wrapper.orange {
    transform: rotate(-3.41deg) scale(1.01);
