---
import Button from "./Button.astro";
---

<div class="wrapper">
  <div class="inner">
    <div class="flex-area">
      <h3>Superjoy at a glance</h3>
      <div class="text">
        <p>
          The Superjoy team leverages its expert understanding of Fortnite
          content development and highly successful influencer campaigns to
          build tailored Fortnite creative user-generated games that activate
          the Fortnite community, convert players into brand advocates, and
          drive revenue.
        </p>
        <div>
          <Button input="Our process" url="/work-with-us" />
        </div>
      </div>
    </div>
    <div class="stats-wrapper">
      <div class="stat-text">
        <h6>Company <br />stats</h6>
        <div class="stat">
          <h3>20</h3>
          <small>staff count</small>
        </div>
        <div class="stat">
          <h3>10M</h3>
          <small>lifetime plays</small>
        </div>
        <div class="stat">
          <h3>15k</h3>
          <small>social media following</small>
        </div>
      </div>
      <div class="bg1"></div>
      <div class="bg2"></div>
    </div>
  </div>
</div>

<style lang="scss">
  .wrapper {
    background: var(--primary-light);
    color: var(--primary-dark);
    padding: 10rem 0;
  }

  .inner {
    position: relative;
    width: var(--inner-width);
    margin: 0 auto;
  }
  .flex-area {
    display: flex;
    position: relative;

    .text {
      flex-basis: 60%;
      margin-left: 5rem;
      display: flex;
      justify-content: space-between;
      align-content: flex-start;
      flex-direction: column;
      p {
        margin-bottom: 3rem;
      }
    }

    h3 {
      text-transform: uppercase;
      flex-basis: 40%;
      line-height: 100%;
    }
  }
  .stats-wrapper {
    position: relative;
    height: calc(100px + 135px);
    margin: 10rem auto;
    display: grid;
    place-items: center;
  }
  .bg1 {
    position: absolute;
    top: 0;
    width: 100%;
    border: 5px solid var(--primary-dark);
    height: 100px;
    border-radius: 30px;
  }
  .bg2 {
    position: absolute;
    bottom: 0;
    width: 100%;
    border: 5px solid var(--primary-dark);
    height: 135px;
    border-radius: 30px;
  }
  .stat-text {
    width: 97%;
    height: 90%;
    margin: 0 auto;
    padding: 0 5rem;
    background: var(--primary-light);
    z-index: 5;
    display: flex;
    align-items: center;
    justify-content: space-between;

    h6 {
      text-transform: uppercase;
    }
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;

    h3 {
      font-family: "Hamburg-Light";
      text-transform: uppercase;
      line-height: 100%;
    }
    small {
      font-family: "Aktiv-Regular";
    }
  }
</style>
