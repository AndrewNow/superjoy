<script>
  import { animate, stagger, inView } from "motion";

  const textInView = document.querySelector(".header");
  const words = document.querySelectorAll(".servicepromise-word");
  const paragraph = document.getElementById("servicepromise-paragraph");
  const services = document.querySelectorAll(".service");

  inView(
    textInView,
    () => {
      animate(
        words,
        { opacity: 1, transform: "translateY(0px)" },
        { duration: 0.75, delay: stagger(0.05, { easing: "ease-in" }) }
      ),
        animate(
          paragraph,
          { opacity: 1, transform: "translateY(0px)" },
          {
            delay: 0.35,
            duration: 0.75,
            easing: [0.5, 0.5, 0, 1],
          }
        );
      animate(
        services,
        { opacity: 1, transform: "translateY(0px)" },
        { duration: 1.2, delay: stagger(0.05, { easing: [0.5, 0.5, 0, 1] }) }
      );
    },
    { margin: "100px 0px 0px 0px", amount: "all" }
  );
</script>

