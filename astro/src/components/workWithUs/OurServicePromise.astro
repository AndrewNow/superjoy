  .servicepromise-word,
  .service {
    margin-right: 1rem;
    transform: translateY(80px);
    display: inline-block;
    opacity: 0.4;
  }
  #servicepromise-paragraph {
    margin-right: 1rem;
    transform: translateY(80px);
    display: inline-block;
    opacity: 0;
  }

  .wrapper {
    width: var(--max-width);
    margin: 0 auto;
    position: relative;
  }
  .flex {
    display: flex;
    justify-content: space-between;
  }
  .header {
    flex-basis: 45%;
    align-self: flex-start;
    display: flex;
    flex-direction: column;
    color: var(--primary-light);

    h4 {
      font-family: "Hamburg-Black";
      margin: 3rem 0;
    }
  }
  .services {
    position: relative;
    margin-top: 15rem;
    align-self: flex-end;
    flex-basis: 50%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    grid-gap: 2rem;
    color: var(--primary-light);
    h6 {
      margin-bottom: 1rem;
    }

    .astro-svg {
      position: absolute;
      top: -10rem;
      right: 0;
    }
  }
</style>
