---
import { Image } from "@astrojs/image/components";
const { data } = Astro.props;
---

<section class="bg" id="bg">
  <div class="inner">
    <h2>Founders</h2>
    <div class="flex-area">
      <div class="bio">
        <p>{data.founderBio}</p>
      </div>
      <div class="founder-wrapper" id="container1">
        <div class="founder">
          <div class="parallax-item">
            <Image
              class="founder-portrait"
              src={data.danielaImageUrl}
              quality={100}
              alt="Portrait of"
              width={330}
              height={330}
              format="webp"
            />
            <div class="founder-orange-block left"></div>
            <div class="founder-orange-block right"></div>
          </div>
        </div>
        <div class="founder">
          <div class="parallax-item2">
            <Image
              class="founder-portrait"
              src={data.aliImageUrl}
              quality={100}
              alt="Portrait of"
              width={330}
              height={330}
              format="webp"
            />
            <div class="founder-green-block top"></div>
            <div class="founder-green-block bottom"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="inner">
    <h2>Our Team</h2>
    <div class="team-flex">
      {
        data.teamMembers.map((member) => {
          return (
            <div class="member-wrapper">
              <div class="member-inner">
                <div class="member-image">
                  {member.portraitUrl ? (
                    <Image
                      src={member.portraitUrl}
                      alt={`Portrait of ${member.memberName}`}
                      width={70}
                      height={70}
                      quality={80}
                      format="webp"
                    />
                  ) : (
                    <div class="member-fallback">
                      <h6>{member.memberName.charAt(0)}</h6>
                    </div>
                  )}
                </div>
                <div class="member-text">
                  <h6>{member.memberName}</h6>
                  <small>{member.memberRole}</small>
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>

