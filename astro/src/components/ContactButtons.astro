---
import Button from "./Button.astro";
const data = [
  {
    text: "Press inquiries",
    email: "test@email.com",
  },
  {
    text: "Career opportunities",
    email: "test@email.com",
  },
];
---

<div class="grid">
  {
    data.map((contact) => {
      return (
        <Button
          input={contact.text}
          url={`mailto:${contact.email}`}
          textColor="var(--accent-yellow)"
          backgroundColor="var(--primary-dark)"
        />
      );
    })
  }
</div>

<style lang="scss">
  .grid {
    width: 100%;
    margin: 5rem auto;
    display: grid;
    place-items: center;
    grid-template-columns: repeat(2, 1fr);
    grid-gap: 1rem;
  }
  .buttonWrapper {
    font-size: 25px;
    text-decoration: none;
    border: 2px solid var(--primary-dark);
    box-sizing: content-box;
    display: inline-flex;
    justify-content: flex-end;
    overflow: hidden;
    align-items: center;
    position: relative;
    padding: 0rem;
    margin: 1rem auto;
    border-radius: 60px;
    transition: var(--hover-transition);
    box-sizing: content-box;
    color: var(--primary-dark);
    background: var(--primary-dark);
  }
  .buttonWrapper::after {
    box-sizing: content-box;
    transition: var(--hover-transition);
    content: "";
    // width: 100%;
    // height: 100%;
    display: block;
    position: absolute;
    top: -1px;
    right: -1px;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: var(--accent-yellow);
    // mix-blend-mode: difference;
    border-radius: 60px;
    transform-origin: right;
    transform: translateX(0%);
  }
  .buttonWrapper:hover::after {
    // width: 30%;
    transform: translateX(78%);
  }
  .buttonWrapper:hover {
    cursor: pointer;
    .innerText {
      color: var(--accent-yellow);
      transition: var(--hover-transition);
    }
  }

  .innerText {
    font-family: "Hamburg-Bold";
    white-space: nowrap;
    padding: 2rem 4rem;
    color: var(--primary-dark-);
    color: inherit;
    position: relative;
    display: block;
    z-index: 5;
  }

  .arrowWrapper {
    display: grid;
    place-items: center;
    position: relative;
    z-index: 2;
    aspect-ratio: 1/1;
    transition: var(--hover-transition);
    color: var(--primary-dark);
    width: 50%;
    height: auto;
    margin-right: 1.5rem;
    border-radius: 60px;
    svg {
      display: block;
      width: 80%;
      margin: 0 auto;
    }
  }
</style>
